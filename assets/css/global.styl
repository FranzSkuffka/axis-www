@import '_settings'

normalize-css()
base()
border-box-html()

// link icon mixin
link-icon()
  &:before
    content: ""
    size: 12px
    bg: 'link-icon.svg'
    absolute: top 8px left -7px
    opacity: 0
    transition()

  &:hover
    &:before
      left: -20px
      opacity: 1

body, html
  height: 100%

*
  font-family: Roboto, sans-serif

.contain
  height: 100%

header
  background: linear-gradient(-45deg, $default, $blue)
  text-align: center
  color: #333
  padding: 85px 0

  h1
    ir('title.svg', 144px 43px)
    margin: 0 auto 15px auto
    font-weight: 500
    color: white

  h2
    normal()
    font-weight: 300
    font-size: .9em
    margin: 0
    color: white

.sticky-wrapper
  width: 22%
  height: 100%
  float: left

  +below(800px)
    display: none

nav
  background: $grey
  height: 100%
  overflow-y: scroll

  .logo-small
    background: linear-gradient(-45deg, $default, $blue)
    width: 100%
    cursor: pointer
    height: 0
    overflow: hidden
    group()
    transition()

    h2
      margin: 0 auto
      ir('title.svg', 88px 26px)
      background-size: 88px 26px

  &.stuck
    position: fixed
    top: 0
    width: 22%

    .logo-small
      height: 60px
      padding: 16px 0

  ul
    reset-list()
    padding: 20px 30px 30px 30px

    li
      font-size: 1.3em
      font-weight: 300
      margin-bottom: 12px
      color: #353B41

      a
        reset-link()
        transition()
        color: #555

        &:hover
          opacity: .7

        &.active
          color: $default
          font-weight: 500

      ul
        reset-list()
        display: none
        margin-top: 9px

        li
          font-size: .8em
          font-weight: 300
          margin-left: 15px
          margin: 6px 0 6px 15px

main
  padding: 20px 0
  margin-left: 22%

  +below(800px)
    margin-left: 0

section
  margin: 25px 5%
  max-width: 50em

  > p a
    link: $default

.instruction
  padding: 0 5%
  max-width: 50em

  p
    margin: .5em 0 0 0

    > code
      code: $blue
      font-size: .75em

  a
    link: $default
    transition()

  h1
    margin: .7em 0
    font-size: 1.8em
    font-weight: 300
    color: #353B41

  &:first-child h1
    margin-top: 0

  h4
    margin: 1em 0
    font-size: 1.2em
    padding-bottom: 4px
    cursor: pointer
    position: relative
    link-icon()

  pre code
    pre()
    font-size: .8em
    padding: 20px

    *
      font-family: fira-mono, monospace

.intro
  background: $light-grey
  padding: 25px 5%
  margin-top: 25px

  p
    margin: .5em 0 0 0
    max-width: 650px

  a
    link: $default
    transition()

h1, h2, h3, h4, h5, h6
  word-wrap: break-word

h1
  font-size: 2em
  font-weight: 400
  margin: 0
  cursor: pointer

h3
  font-family: fira-mono, monospace
  color: $default
  margin-top: 0
  cursor: pointer
  position: relative
  link-icon()

h4
  color: #6D6D6D
  margin: .3em 0
  border-bottom: 1px solid darken($light-grey, 5%)

p
  color: #65717B
  font-size: 17px
  line-height: 1.6em
  font-weight: 300
  -webkit-font-smoothing: subpixel-antialiased

hr
  border: 1px solid $light-grey
  margin: 30px auto

dt
  font-family: fira-mono, monospace

  &:after
    content: ":"

dd
  color: #8b8b8b
  font-size: 17px
  line-height: 1.5em
  font-weight: 300

.example
  group()

  pre
    width: 50%
    float: left
    background: $grey
    border: 1px solid darken($grey, 10%)
    border-radius: 4px
    padding: 15px
    font-family: fira-mono, monospace
    font-size: .9em

.el
  width: 50%
  float: left
  padding: 1em

.tip
  area(#ecf6fa)
  padding-right: 1.5rem

  h5
    margin: .2rem .5rem 0
  p
    padding: 0 .5rem

  li
    margin-bottom: 10px

  a
    link()

// Stack the pre and el for small resolutions
+below(800px)
  .example
    border: 1px solid darken($grey, 10%)
    border-radius: 4px
    margin: 1em 0 0

    pre
      border: none
      border-radius: 0
      float: none
      margin: 0
      width: 100%

  .el
    width: 100%
    float: none
    padding: 1em

    figure
      margin: 1em

    .ir
      padding 0
      width: 100%
