doctype html
html
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='A terse and powerful stylus library built on top of nib')
    meta(name='author', content="Jeff Escalante")
    meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1')
    link(rel='icon', type='image/png', href='img/favicon.png')
    title Axis
    script(src="//use.typekit.net/ddj0mjr.js")
    script.
      try{Typekit.load();}catch(e){}
    link(rel='stylesheet', href='http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/styles/default.min.css')
    != css()
  body

    header
      h1 Axis
      h2 a magical utility belt for stylus

    .contain

      - var modules = Object.getOwnPropertyNames(site.modules)
      - modules.shift()
      nav
        .logo-small: h2 Axis
        ul
          li(data-id='installation'): a(href='#installation') Installation
          li(data-id='usage'): a(href='#usage') Usage
          li(data-id='easing'): a(href='#easing') Easing
          each module in modules.sort()
            li(data-id=module)
              a(href='#'+module)= module.humanize()
              ul
                each fn in site.modules[module]
                  li(data-id=fn.name): a(href='#'+fn.name)= fn.name

      main
        block content

  script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
  != js()
