doctype html
html
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='A terse and powerful stylus library built on top of nib')
    meta(name='author', content="Jeff Escalante")
    meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1')
    link(rel='icon', type='image/png', href='img/favicon.png')
    title Axis
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,500,700,300' rel='stylesheet')
    != css()
  body

    header
      h1 Axis
      h2 a utility belt for stylus

    .contain

      - var modules = Object.getOwnPropertyNames(site.modules)
      - modules.shift()
      nav
        .logo-small: h2 Axis
        ul
          li(data-id='installation'): a(href='#installation') Installation
          li(data-id='usage'): a(href='#usage') Usage
          li(data-id='settings')
            a(href='#settings') Settings
              ul
                li(data-id='font-stacks'): a(href="#font-stacks") Font stacks              
                li(data-id='default-font-settings'): a(href="#default-font-settings") Font settings  
                li(data-id='colors'): a(href="#colors") Colors  
                li(data-id='default-color'): a(href="#default-color") Default color                  
                li(data-id='text-selection-setting'): a(href="#text-selection-setting") Text selection  
                li(data-id='image-path'): a(href="#image-path") Image path  
                li(data-id='ligatures'): a(href="#ligatures") Ligatures  
          li(data-id='easing'): a(href='#easing') Easing
          each module in modules.sort()
            li(data-id=module)
              a(href='#'+module)= module.humanize()
              ul
                each fn in site.modules[module]
                  li(data-id=fn.name): a(href='#'+fn.name)= fn.name

      main
        block content

  script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
  != js()
